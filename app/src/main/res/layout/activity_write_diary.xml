<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainBlueColor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:text="일기 쓰기"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="32dp"
        android:text="감정 선택하기"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp">

                <Button
                    android:id="@+id/write_diary_happy"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/emo_diary_happy"/>

                <Button
                    android:id="@+id/diary_happy_select_btn"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/emo_diary_unselect_btn"
                    android:layout_marginLeft="38dp"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp">

                <Button
                    android:id="@+id/write_diary_good"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/emo_diary_good"/>

                <Button
                    android:id="@+id/diary_good_select_btn"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/emo_diary_unselect_btn"
                    android:layout_marginLeft="38dp"/>

            </FrameLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp">

                <Button
                    android:id="@+id/write_diary_angry"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/emo_diary_angry"/>

                <Button
                    android:id="@+id/diary_angry_select_btn"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/emo_diary_unselect_btn"
                    android:layout_marginLeft="38dp"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp">

                <Button
                    android:id="@+id/write_diary_cry"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/emo_diary_cry"/>

                <Button
                    android:id="@+id/diary_cry_select_btn"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/emo_diary_unselect_btn"
                    android:layout_marginLeft="38dp"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp">

                <Button
                    android:id="@+id/write_diary_sad"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/emo_diary_sad"/>

                <Button
                    android:id="@+id/diary_sad_select_btn"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/emo_diary_unselect_btn"
                    android:layout_marginLeft="38dp"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">

                <Button
                    android:id="@+id/write_diary_soso"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/emo_diary_soso"/>

                <Button
                    android:id="@+id/diary_soso_select_btn"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/emo_diary_unselect_btn"
                    android:layout_marginLeft="38dp"/>

            </FrameLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/write_et_border"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/viewDatePick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <EditText
                    android:id="@+id/edit_diary"
                    android:layout_width="320dp"
                    android:layout_height="360dp"
                    android:layout_marginTop="24dp"
                    android:ems="10"
                    android:gravity="top|left"
                    android:inputType="text|textMultiLine|textCapSentences"
                    android:lineHeight="33dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textCursorDrawable="@color/mainGreyColor"
                    android:background="@drawable/write_background"/>

                <Button
                    android:id="@+id/diary_save_btn"
                    android:layout_width="296dp"
                    android:layout_height="48dp"
                    android:text="일기 저장하기"
                    android:textColor="#000000"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/write_diary_save_border"/>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</LinearLayout>