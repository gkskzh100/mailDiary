<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:text="일기 쓰기"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="32dp"
        android:text="감정 선택하기"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/write_diary_happy"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/emo_diary_happy"/>

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/emo_diary_good"
                android:layout_marginLeft="16dp"/>

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/emo_diary_angry"
                android:layout_marginLeft="16dp"/>

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/emo_diary_cry"
                android:layout_marginLeft="16dp"/>

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/emo_diary_sad"
                android:layout_marginLeft="16dp"/>

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/emo_diary_soso"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

    </ScrollView>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/write_et_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/viewDatePick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/edit_diary"
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="text|textMultiLine|textCapSentences"
                android:text=""
                android:textCursorDrawable="@color/colorPrimary" />

            <Button
                android:id="@+id/btn_Save"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:text="일기 저장하기"
                android:layout_marginTop="16dp"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>